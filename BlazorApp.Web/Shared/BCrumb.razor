@inject IAppStateService appState
<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">@appState.breadCrumb.Title</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="/">Главная</a>
                        @foreach (var item in @appState.breadCrumb.Path)
                        {
                            <span class="brd-separetor">@item.Key</span>
                            <span class="breadcrumb_item active">@item.Value</span>
                        }
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
