@page "/counter"




<div style="width:300px;margin: 0 auto; height:400px;">
    <h1>Counter</h1>

    <p> @currentCount </p>

    <input class="input-group-text" @bind="@currentCount" />


    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
</div>

@code {
    int currentCount { get; set; }

    protected override void OnInitialized()
    {
        currentCount = StoreState.Counter;
    }
    void IncrementCount()
    {
        Dispatcher.Dispatch(StoreState.SetState<int>(5));
        currentCount = StoreState.Counter;
    }


}